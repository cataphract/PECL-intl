<refentry xml:id="function.collator-compare" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>Collator->compare</refname>
  <refpurpose>Compare two strings using PHP <function>strcmp</function> semantics.</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>integer</type><methodname>Collator->compare</methodname>
   <methodparam><type>string</type><parameter>$str1</parameter></methodparam>
   <methodparam><type>string</type><parameter>$str2</parameter></methodparam>
  </methodsynopsis>
  <para>
  Wrapper around ICU ucol_strcoll().
  </para>
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>$str1</parameter></term>
     <listitem>
      <para>
       First string to compare.
      </para>
     </listitem>
    </varlistentry>

    <varlistentry>
     <term><parameter>$str2</parameter></term>
     <listitem>
      <para>
       Second string to compare.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   <itemizedlist>
    <listitem>
     <para>
      1   if <parameter>$str1</parameter> is <emphasis>greater</emphasis> than <parameter>$str2</parameter>;
     </para>
    </listitem>
    <listitem>
     <para>
      0   if <parameter>$str1</parameter> is <emphasis>equal</emphasis> to <parameter>$str2</parameter>;
     </para>
    </listitem>
    <listitem>
     <para>
      -1   if <parameter>$str1</parameter> is <emphasis>less</emphasis> than <parameter>$str2</parameter>;
     </para> 
    </listitem>
   </itemizedlist>
  </para>
 </refsect1>
 
 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   On error <type>boolean</type> &false; is returned.
  </para> 
  &return.falseproblem;
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>Collator->compare</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$s1 = 'Hello';
$s2 = 'hello';

$coll = Collator::create( 'en_US' );
$res  = $coll->compare( $s1, $s2 );

if( $res === false )
    echo $coll->getErrorMessage();
else if( $res > 0 )
    echo "s1 is greater than s2\n";
else if( $res < 0 )
    echo "s1 is less than s2\n";
else
    echo "s1 is equal to s2\n";
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
s1 is greater than s2
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>collator_compare</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

