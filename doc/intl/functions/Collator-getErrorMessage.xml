<refentry xml:id="function.collator-getErrorMessage" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>Collator->getErrorMessage</refname>
  <refpurpose>Return error text for the last object operation.</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>Collator->getErrorMessage</methodname>
   <void />
  </methodsynopsis>
  <para>
   <!-- description goes here -->
  </para>
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Description of an error occured in the last Collator method call.
  </para>
 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>Collator->getErrorMessage</function> example</title>
    <programlisting role="php">
<![CDATA[
<?php
$coll = new Collator( 'lt' );
if( $coll->compare( 'y', 'k' ) === false )
{
    echo $coll->getErrorMessage();
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>Collator->getErrorCode</function></member>
    <member><function>collator_get_error_message</function></member>
    <member><function>intl_get_error_message</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

